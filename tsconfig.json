{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": {
      "virtual-repeat-angular": [
        //"dist/virtual-repeat-angular-lib"
        "projects/virtual-repeat-angular-lib/src/lib" //used to debug the library with .ts code
      ],
      "virtual-repeat-angular/*": [
        //"dist/virtual-repeat-angular-lib/*"
        "projects/virtual-repeat-angular-lib/src/lib/*" //used to debug the library with .ts code
      ]
    }
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
  }
}