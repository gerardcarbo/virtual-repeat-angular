{
  "name": "virtual-repeat-angular-lib-app",
  "version": "0.4.4",
  "scripts": {
    "serve": "ng serve",
    "build_prod": "ng build --prod",
    "serve_prod": "http-server ./dist/virtual-repeat-angular-lib-app/",
    "test_lib": "ng test virtual-repeat-angular-lib",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build_lib": "ng build --prod virtual-repeat-angular-lib",
    "npm_pack": "cp README.md dist/virtual-repeat-angular-lib && cd dist/virtual-repeat-angular-lib && npm pack && cp *.tgz ../releases/",
    "npm_build_and_package": "npm run build_lib && npm run npm_pack",
    "npm_publish": "npm publish dist/virtual-repeat-angular-lib/virtual-repeat-angular-0.4.4.tgz",
    "ngh_publish": "npm run build_lib && ng build --prod --base-href https://gerardcarbo.github.io/virtual-repeat-angular/ && ngh --dir dist/virtual-repeat-angular-lib-app",
    "git_push": "git push -u origin master",
    "git_push_force": "git push -u -f origin master",
    "git_ammend": "git commit --amend --all --no-edit",
    "git_pull": "git pull --rebase origin",
    "install_ngh": "npm install -g angular-cli-ghpages",
    "install_http-server": "npm install -g http-server",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular-devkit/build-ng-packagr": "~0.13.0",
    "@angular/cli": "~7.3.0",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/node": "~8.9.4",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "codelyzer": "~4.5.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^4.2.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.34.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  }
}
